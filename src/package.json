{
  "name": "zarinpal-ts",
  "version": "1.0.10",
  "description": "Zarinpal payment package.",
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/babakks/zarinpal-ts"
  },
  "author": {
    "name": "Babak K. Shandiz",
    "url": "https://github.com/babakks",
    "email": "babak.k.shandiz@gmail.com"
  },
  "keywords": [
    "zarinpal",
    "typescript",
    "javascript",
    "payment"
  ],
  "license": "MIT",
  "files": [
    "src",
    "dist",
    "test",
    "*"
  ],
  "scripts": {
    "copyAssets": "cpx \"src/**/*.{json,pem,htm,html,def}\" \"dist\"",
    "copyAll": "npm run copyAssets",
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint && npm run copyAll",
    "serve": "cd dist && node index.js",
    "build-serve": "npm run build && npm run serve",
    "build-watch-node": "npm run build && npm run watch-node",
    "watch-node": "cd dist && nodemon index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "mocha --require ts-node/register ./test/**/*.test.ts",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc -d",
    "watch-ts": "tsc -w -d",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "cd dist && nodemon --inspect index.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "serve-debug-brk": "cd dist && nodemon --inspect-brk index.js",
    "watch-debug-brk": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug-brk\"",
    "build-watch-debug-brk": "npm run build && npm run watch-debug-brk",
    "serve-debug-brk-node6": "cd dist && nodemon --inspect --debug-brk index.js",
    "watch-debug-brk-node6": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug-brk-node6\"",
    "build-watch-debug-brk-node6": "npm run build && npm run watch-debug-brk-node6"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "@types/node": "^11.11.6",
    "@types/sinon": "^7.0.10",
    "chai": "^4.2.0",
    "cpx": "^1.5.0",
    "mocha": "^6.1.4",
    "sinon": "^7.3.0",
    "ts-mocha": "^6.0.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  }
}
